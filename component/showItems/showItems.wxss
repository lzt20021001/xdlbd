
.showItems_content{
  width:100%;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(102,102,102,1);
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(229,229,229,.7);
  padding:0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.showItems_content >view:nth-of-type(2){
  flex: 1;
  text-align: right;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  padding-left: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.showItems_content image{
  position: absolute;
  top:50%;
  right: 30rpx;
}
.showItems_content_minheight {
  width: 100%;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: rgba(102,102,102,1);
  min-height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(229,229,229,.7);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  justify-content: space-between;
}
.showItems_content_minheight >view:nth-of-type(2){
  text-align: left;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  padding-left: 60rpx;
  box-sizing: border-box;
  max-width: 600rpx;
}
.showItems_selImg{
 
  width: 13rpx;
  height: 20rpx;
  margin-top: -10rpx;
}
.showItems_phone{
  width: 25rpx;
  height: 25rpx;
  margin-top: -10rpx;
}
.setPadding1{
  padding-right: 30rpx;
}
.setPadding2{
  padding-right: 50rpx;
}

.setPadding3{
 
  position: relative;

}

.setPadding3 >text:nth-of-type(2){
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  text-decoration:underline;
  color:rgba(28,158,242,1);
  margin-left: 70rpx;
}
.setPadding3>text:last-child{
  position: absolute;
  width:2rpx;
  height:60rpx;
  background:rgba(230,230,230,.7);
  top:50%;
  margin-top: -30rpx;
  right: 200rpx;
 
}
.showItems_content .isShow{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.showItems_btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: flex;
  position: relative;
  border-bottom: 1rpx solid rgba(229,229,229,.7);
}
.showItems_btn >view{
  flex: 1;
  font-size:34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  text-decoration:underline;
  color:rgba(28,158,242,1);
}
.showItems_btn > view:nth-of-type(2){
  position: absolute;
  width:1px;
  height:75rpx;
  background:rgba(204,204,204,.4);
  left:50%;
  top:50%;
  margin-top: -37rpx;
 
}
.showItems_btn > view:last-child{
  color:rgba(255,76,106,1);
}
.showItems_content .red-icon {
  color:#FF4C6A;
  margin-right:8rpx
}
.only-key {
  margin-left: 16rpx;
}
.slot-style {
  background: #FF7878;
  border-radius: 6rpx;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;
  -ms-border-radius: 6rpx;
  -o-border-radius: 6rpx;
  margin-right: 4rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 12rpx;
}
.slot-style-green {
  background: green;
}