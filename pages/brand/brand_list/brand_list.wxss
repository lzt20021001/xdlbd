page {
  background-color: #dedede;
  padding: 10rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 4;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  flex: 1;
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}



 .goods_item {
  border-bottom: 1px solid #ccc;
}

 .goods_item .goods_info_wrap {
  display: flex;
  flex-direction: column;
  
}
 .goods_name {
  display: flex;
  padding-top: 10rpx;
  color: black;
  border-bottom: 1px solid #ccc;
}

 .goods_id {
  display: flex;
  
  padding-top: 10rpx;
  color: black;
 
}
.leftlabel
{
   flex: 1;
   padding:5rpx;
   justify-content: center;
}

.righttext
{
  flex: 4;
   padding:5rpx;
   justify-content: center;
}

.disline{
  display: flex;
}